datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String
  copiesAvailable Int
  publishedAt     DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
